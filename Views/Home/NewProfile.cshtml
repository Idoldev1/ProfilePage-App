@model  ProfileCreateView

@{
    ViewBag.Title = "New Profile";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="NewProfile" method="post" class="mt-3">
    <div class="form-group row"> 
        <label asp-for="Name" class="col-sm-2 col-form-label"></label> 
        <div class="col-sm-10"> 
            <input asp-for="Name" class="form-control" placeholder="Name"/>
 
         </div>
    </div>
    <div class="form-group row"> 
        <label asp-for="Email" class="col-sm-2 col-form-label"></label> 
        <div class="col-sm-10"> 
            <input asp-for="Email" class="form-control" placeholder="Email"/>
         </div>
    </div>
    <div class="form-group row"> 
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
         <div class="col-sm-10"> 
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
         </div>
    </div>
    <div class="form-group row"> 
        <label asp-for="Skills" class="col-sm-2 col-form-label"></label> 
        <div class="col-sm-10"> 
            <input asp-for="Skills" />
        </div>
    </div>
    <div class="form-group row"> 
        <label asp-for="Projects" class="col-sm-2 col-form-label"></label> 
        <div class="col-sm-10"> 
            <input asp-for="Projects" />
        </div>
    </div>
    <div class="form-group row"> 
        <label asp-for="Experience" class="col-sm-2 col-form-label"></label> 
        <div class="col-sm-10"> 
            <input asp-for="Experience" placeholder="Between 1-5 years"/> 
        </div>
    </div>

    <div class="form-group row"> 
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label> 
        <div class="col-sm-10"> 
            <div class="custom-file" > 
                <input asp-for="Photo" class="form-control custom-file-input" >
                <label class="custom-file-label">Please select an image...</label>
            </div>
 
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row"> 
        <div class="col-sm-10"> 
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="index" asp-controller="home" class="btn btn-primary">Cancel</a>
        </div>
    </div> 
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>
